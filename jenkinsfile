pipeline {
    agent { label 'python' }
    stages {
        stage('source code from git'){
            steps {
                git branch: 'declarative', url: 'https://github.com/ramyapatibandla48/python-sample-vscode-flask-tutorial.git'
            }
        }

        stage('build') {
            steps {
                 sh 'python3 -m pip help install'
                 sh 'pip install -r requirements.txt'
            }
        }

        stage('test'){
            steps{
                sh 'pip install pytest pytest-azurepipelines'
                sh ' pip install pytest-cov'
                sh 'pytest --doctest-modules --junitxml=junit/test-results.xml --cov=. --cov-report=xml'
            }
        }
        
    }
}